@model IEnumerable<Core.EntityFramework.Venta>

@{
    ViewBag.Title = "Reporte";
}

<h1>Reporte</h1>

<div class="row m-t-3">
    <div class="col-lg-12">
        <form>
            Filtrar por fecha <input type="datetime-local" name="fecha" />
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </form>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table m-t-3">
        <tr>
            <th class="text-capitalize">
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th class="text-capitalize">
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th class="text-capitalize">
                nombre proveedor
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.proveedor.nombre)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.id }, new { @class = "text-info"}) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "text-danger"})
                </td>
            </tr>
        }

    </table>
}
else
{
    <h4 class="text-danger text-center m-t-3">No hay ventas disponibles.</h4>
}