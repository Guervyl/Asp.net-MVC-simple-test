@model IEnumerable<Core.EntityFramework.proveedor>

@{
    ViewBag.Title = "Lista proveedores";
}

<h1>Lista de proveedores</h1>

<p class="m-t-3">
    @Html.ActionLink("Crear nuevo", "Create", new { }, htmlAttributes: new { @class = "btn btn-warning" })
</p>

@if (Model.Count() == 0)
{
    <div class="row m-t-3">
        <div class="col-lg-12">
            <h4 class="text-center text-danger">No hay proveedor disponibles.</h4>
        </div>
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    <a href="/Ventas/Create?nombreProveedor=@item.nombre" class="text-warning">Crear venta</a> |
                    @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.id }, new { @class = "text-info" }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { @class = "text-danger" })
                </td>
            </tr>
        }

    </table>
}